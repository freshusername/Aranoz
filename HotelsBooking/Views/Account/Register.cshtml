
@model HotelsBooking.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="login_part padding_top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner">
                        <h2>Alredy have an account?</h2>
                        <p>
                            There are advances being made in science and technology
                            everyday, and a good example of this is the
                        </p>
                        <a asp-controller="Account" asp-action="Login" class="btn_3">Login</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3 class="text-center">Registration</h3>

                        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Email" type="email" class="form-control" value=""
                                       placeholder="Email">
                            </div>
                            <div class="col-md-12 form-group">
                                <input asp-for="FirstName" class="form-control" placeholder="FirstName" value="">
                            </div>
                            <div class="col-md-12 form-group">
                                <input asp-for="LastName" class="form-control" placeholder="LastName" value="">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Password" class="form-control" value=""
                                       placeholder="Password">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input asp-for="ConfirmPassword" class="form-control" value=""
                                       placeholder="Confirm password">
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">
                                    Registration
                                </button>
                            </div>
                            <p class="small text-center">By clicking the Sign Up button, you agree to our <br><a href="#">Terms &amp; Conditions</a>, and <a href="#">Privacy Policy</a>.</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

