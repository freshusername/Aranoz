@using HotelsBooking.Models
@model ForgotPasswordViewModel

<div class="container box_1170 border-top-generic">
    <div class="section padding_top justify-content-center">
        <div class="row ">
            <div class="col-md-5 ">
                <form method="post" class="form-horizontal">
                    <h2 class="text-center">Forgot Password?</h2>
                    <h4 class="text-center">We will send you link to reset your password</h4>
                    <hr />
                    <div class="col-md-12 form-group p_star">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                        <div class="col-md-12 form-group p_star">
                            <input asp-for="Email" type="email" class="form-control" id="email" name="email" value=""
                                   placeholder="Email">
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <button type="submit" value="submit" class="btn_3">
                                Send
                            </button>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}