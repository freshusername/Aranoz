@model HotelsBooking.Models.RegisterViewModel
@{
    ViewData["Title"] = "Create User";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body class="no-padding-top">
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <span style="font-size:20px">Create a new user</span>
            </div>
            <form asp-action="CreateUser" asp-controller="Admin" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <label class="control-label">Email:</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">First Name:</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Last Name:</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                </div>


                <div class="form-group">
                    <label class="control-label">Password:</label>
                    <input type="password" asp-for="Password" class="form-control">
                </div>

                <div class="form-group">
                    <label class="control-label">Confirm Password:</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control">
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}