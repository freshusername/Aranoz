@{
    Layout = null;
}
@model AddRoomConvViewModel;
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true">
    <link href="~/css/Bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <link href="~/css/ForCheckBoxes.css" rel="stylesheet" type="text/css" />
</head>

<body class="no-padding-top">
    <div class="container body-content">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
                <div class="text-center" style=" margin-bottom:20px">
                    <span style="font-size:20px;">Add new conveniences for room</span>
                </div>
                <form asp-action="AddConvForRoom" asp-controller="Admin" method="post">
                    <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="HotelRoomId" value="@Model.HotelRoomId" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="HotelId" value="@Model.HotelId" />
                    </div>

                    <div class="form-group">
                        <div class="text-center">
                            @if (Model.convs.Any())
                            {
                                <ul class="ks-cboxtags">
                                    @foreach (var item in Model.convs)
                                    {
                                        <li>
                                            <input name="SelectedItems" type="checkbox" id="@item.Id" value="@item.ConvName">
                                            <label for="@item.Id">@item.ConvName   @Math.Round(item.Price, 2)</label>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <label style="font-size:18px;">Room has all conveniences for that hotel</label>
                            }

                        </div>
                        <div class="text-center">
                            @if (Model.convs.Any())
                            {
                                <div class="button-center">
                                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                                </div>
                            }
                            else
                            {
                                <div class="button-center">
                                    <input type="submit" value="Go back" class="btn btn-danger text-center" style="width:20%" />
                                </div>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/js/jquery-3.3.1.slim.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/Bootstrap-multiselect.js" type="text/javascript"></script>
    <!-- Initialize the plugin: -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example-getting-started').multiselect();
        });
    </script>
</body>
</html>