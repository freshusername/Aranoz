@model HotelsBooking.Models.CreateOrEditHotelRoomViewModel
@{
    ViewData["Title"] = "CreateHotelRoom";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/nice-select.css" rel="stylesheet" />

<body class="no-padding-top">

    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <span style="font-size:20px">Create a new hotel room</span>
            </div>
            <form asp-action="CreateHotelRoom" asp-controller="Admin" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <label class="control-label">Number:</label>
                    <input type="number" asp-for="Number" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Price:</label>
                    <input type="number" asp-for="Price" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="hidden" value="@Model.HotelId" asp-for="HotelId" />
                </div>

                <div class="form-group">
                    <label class="control-label">Room Type:</label>
                    <div style="margin-bottom:70px">
                        <select asp-for="Type" asp-items="Html.GetEnumSelectList<@Infrastructure.Enums.RoomType>()" class="nice-select option col-lg-4 col-md-5 col-sm-6 col-xs-12">
                        </select>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

