@model HotelsBooking.Models.CreateAndEditHotelConvViewModel;
@{
    ViewData["Title"] = "Edit Hotel";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body class="no-padding-top">
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            
            <form asp-action="EditHotelConv" asp-controller="Admin" method="post">
                <div class="text-center">
                    <span style="font-size:20px">Edit hotel convenience:</span>
                </div>
                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <input type="hidden" asp-for="@Model.model.Id" value="@Model.model.Id" />
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-6 col-lg-offset-3">Name:</label>
                    <div>
                        <select asp-for="model.Name" class="nice-select option col-lg-6 col-lg-offset-3">
                            <option value="@Model.model.Name" selected>
                                @Model.model.Name
                            </option>
                            @foreach (var addConv in Model.additionalConvs)
                            {
                                if (@Model.model.Name != @addConv.Name)
                                {
                                <option value="@addConv.Name">
                                    @addConv.Name
                                </option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-6 col-lg-offset-3" style="margin-top:20px">Price:</label>
                    <input type="number" asp-for="@Model.model.Price" value="@Convert.ToInt32(Model.model.Price)" class="form-control col-lg-6 col-lg-offset-3" />
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="@Model.model.HotelId" value="@Model.model.HotelId" />
                </div>
                <div class="form-group text-center col-lg-6 col-lg-offset-3" style="margin-top:30px">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}