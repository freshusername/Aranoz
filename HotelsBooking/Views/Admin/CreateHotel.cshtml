@model HotelsBooking.Models.CreateOrEditHotelViewModel;
@{
    ViewData["Title"] = "CreateHotel";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link  href="~/css/nice-select.css" rel="stylesheet"/>
<body>

    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <span style="font-size:20px">Create a new hotel</span>
            </div>
            <form asp-action="CreateHotel" asp-controller="Admin" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <label class="control-label">Name:</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Location:</label>
                    <input type="text" asp-for="Location" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Season:</label>
                    <div style="margin-bottom:70px">
                        <select asp-for="Season" asp-items="Html.GetEnumSelectList<@Infrastructure.Enums.Season>()" class="nice-select option col-lg-4 col-md-5 col-sm-6 col-xs-12">
                            <option value="none" selected disabled hidden>
                                Select an Option
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
    <script src="~/js/jquery.nice-select.min.js"></script>
</body>
