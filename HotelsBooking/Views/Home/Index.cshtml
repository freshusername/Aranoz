@using ApplicationCore.DTOs
@model HotelFilterDTO

<!-- Search Filter Section Begin -->
<section class="search-filter">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="Hotel" asp-action="ShowHotels" method="get" class="check-form">
                    <h4>Check Availability</h4>
                    <div class="datepicker">
                        <p>From</p>
                        <input asp-for="@Model.FromDate" type="text" class="datepicker-1" placeholder="dd / mm / yyyy" autocomplete="off">
                        <img src="img/calendar.png" alt="">
                    </div>
                    <div class="datepicker">
                        <p>To</p>
                        <input asp-for="@Model.ToDate" type="text" class="datepicker-2" placeholder="dd / mm / yyyy" autocomplete="off">
                        <img src="img/calendar.png" alt="">
                    </div>
                    <div class="room-quantity">
                        <div class="single-quantity">
                            <p>Adults</p>
                            <div class="pro-qty">
                                <input asp-for="@Model.MaxAdults" type="text" value="0">
                            </div>
                        </div>
                        <div class="single-quantity last">
                            <p>Children</p>
                            <div class="pro-qty">
                                <input asp-for="@Model.MaxChildren" type="text" value="0">
                            </div>
                        </div>
                        @*<div class="single-quantity last">
                            <p>Rooms</p>
                            <div class="pro-qty"><input type="text" value="0"></div>
                        </div>*@
                    </div>
                    <div class="room-selector">
                        <p>Location</p>
                        <select asp-for="@Model.Location" class="suit-select">
                            <option value="@String.Empty">Enter location</option>
                            @foreach (var location in ViewBag.Locations)
                            {
                                <option value="@location">@location</option>
                            }
                        </select>
                    </div>
                    <button value="Filter" type="submit">Go</button>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Search Filter Section End -->

<section class="feature_part padding_top">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-7 col-sm-6">
                <div style="background: url('img/banner/hotels_index.jpeg'); background-size: cover; " class="single_feature_post_text">
                    <p class="home-index-text">hotels list</p>
                    <h3 class="home-index-text">Hotels</h3>
                    <a asp-controller="Hotel" asp-action="ShowHotels" class="feature_btn home-index-text">EXPLORE NOW<i class="fas fa-play"></i></a>

                </div>
            </div>
            <div class="col-lg-5 col-sm-6">
                <div class="col-lg-7 col-sm-6">
                    <div style="background: url('img/banner/profile.jpeg'); background-size: cover; " class="single_feature_post_text">
                        <p class="home-index-text">profiles list</p>
                        <h3 class="home-index-text">Profiles</h3>
                        <a asp-controller="Profile" asp-action="Index" class="feature_btn home-index-text">EXPLORE NOW<i class="fas fa-play"></i></a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

